    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) execute_order",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/execute_order",
            "args": 
                [ "--exchange=coinbase"
                , "--symbol=ETH-BTC"
                , "--api_key=${env:COINBASE_API_KEY}"
                , "--api_secret=${env:COINBASE_API_SECRET}"
                , "--api_phrase=${env:COINBASE_API_PHRASE}"
                , "--side=buy"
                , "--size=0.0025"
                , "--type=limit"
                , "--price=0.055"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description":  "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) streamer",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/streamer",
            "args": 
            [ "--exchange", "ftx"
            , "--symbol", "BTC-PERP", "SOL-PERP"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description":  "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },

        {
            "name": "(gdb) algo",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/algo",
            "args": 
            // [ "--exchange=ftx"
            // , "--api_key=${env:FTX_API_KEY}"
            // , "--api_secret=${env:FTX_API_SECRET}"
            // , "--lookback=50"
            // , "--reversion_level=2"
            // , "--base_quantity=0.0025"
            // , "--symbol=BTC-PERP"
            // ],
            [ "--exchange=coinbase"
            , "--api_key=${env:COINBASE_API_KEY}"
            , "--api_secret=${env:COINBASE_API_SECRET}"
            , "--api_phrase=${env:COINBASE_API_PHRASE}"
            , "--lookback=50"
            , "--reversion_level=2"
            , "--base_quantity=0.0025"
            , "--symbol=ETH-BTC"
            // , "SOL-BTC"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake build project",
            "miDebuggerPath": "/usr/bin/gdb",
        }
    ]
}